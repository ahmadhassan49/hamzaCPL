<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="./css/auth.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
<div class="img_container">
    <img src="assets/images/login_img.png" alt="">
</div>


<div class="container">
    <div class="forms">
        <div class="form-content">
            <div class="login-form">
                <div class="title">Chat Pandas</div>
                <p class="text">Please Enter User Information</p>
                <form action="/" method="post">
                    {{!-- <form> --}}
                    <div class="input-boxes">
                        <div class="input-box">
                            <input type="email" name="email" id="user_email" placeholder="Enter User name or email"
                                   required>
                        </div>
                        <div class="input-box">
                            <input type="password" class="ey" id="user_password" name="password"
                                   placeholder="Enter your password"
                                   required>
                            <i class="eye fas fa-eye-slash"></i>
                        </div>
                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck">
                        <label class="form-check-label" for="invalidCheck">
                            Remember me
                        </label>
                        <div class="button input-box ">
                            <input type="submit" class="active-btn" id="submitid" value="Go Pandas">
                        </div>
                        <div class="text sign-up-text"><a href="" style="color: #25293c;">Forgot your password?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    const eyes = document.getElementsByClassName('eye');
    const eys = document.getElementsByClassName('ey');
    for (let i = 0; i < eyes.length; i++) {
        eyes[i].addEventListener('click', () => {
            eyes[i].classList.toggle("fa-eye");
            eyes[i].classList.toggle("fa-eye-slash");
            eys[i].type = (eys[i].type === 'password') ? 'text' : 'password';
        });
    }
</script>
</body>

</html>